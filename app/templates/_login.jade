    block scripts
    
  body
    .login
      h1: a(href=url_for("main")) urlsaver
      .login-bottom
        h2 Login
        form(method="post", action= url_for("login"))
          | #{form.csrf_token}
          .col-md-6
            .login-mail
              input(type="text", placeholder="Username", name="username")
              i.fa.fa-envelope
            .login-mail
              input(type="password", placeholder="Password",name="password")
              i.fa.fa-lock
            h6
              //- a(href=url_for("restore_password"))
              a(href="#")
                i.fa.fa-exclamation-circle
                | Forget Password?

          .col-md-6.login-do
            label.hvr-shutter-in-horizontal.login-sub
              input(type="submit", value="login")
            p Do not have an account?
            a.hvr-shutter-in-horizontal(href=url_for("register")) Register

          .clearfix

